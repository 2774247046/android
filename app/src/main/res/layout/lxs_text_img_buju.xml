<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="NotSibling,UselessParent">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="150dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="#669900"
            android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lxs_view_img"
                    android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="150dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/lxs_view_text"
            android:shadowRadius="3"
            android:shadowColor="#DB2E13"
            android:shadowDx="2"
            android:shadowDy="2"
            android:layout_toLeftOf="@+id/lxs_view_img"
            />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black"
                    android:layout_below="@+id/lxs_view_text"
                    android:layout_marginTop="60dp"/>
        </RelativeLayout>

</RelativeLayout>